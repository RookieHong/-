<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title></title>
    <link rel="stylesheet" type="text/css" href="../css/api.css"/>
    <link rel="stylesheet" type="text/css" href="../css/common.css"/>
    <link rel="stylesheet" type="text/css" href="../css/aui.css"/>
    <style>
        body {
            display: -webkit-box;
            -webkit-box-orient: vertical;
        }
        .login-header-btn{
            display: block;
            background-size: 30px;
            padding: 20px;
        }
        .content {
            -webkit-box-flex: 1;
        }

        .detail-header {
            border-bottom: 1px solid #CDCDCD;
            background-color: #DD3237;
        }

        .back {
            background-size: 40px !important;
            background-image: url("../image/weather_back@2x.png");
            background-position: right !important;
        }

        .detail-header a {
            padding: 25px;
        }

        .title {
            color: #FFFFFF;
            text-align: center;
            line-height: 50px;
            font-size: 18px;
        }

        i {
            display: block;
            width: 30px;
            height: 30px;
            background-size: 30px;
            background-repeat: no-repeat no-repeat;
            background-position: center;
        }

        .user {
            background-image: url("../image/login_username_icon@2x.png");
        }

        .email{
          background-image: url("../image/login_email_icon@2x.png");
        }

        .password {
            background-image: url("../image/login_password_icon@2x.png");
        }

        .input-wrap {
            padding: 10px 0;
            display: -webkit-box;
            border-bottom: 1px solid #d4d4d4;
        }

        .form {
            background-color: rgba(255, 255, 255, 0.8);
            margin: 20px;
            border-radius: 8px;
            padding: 0 10px;
            line-height: 30px;
        }

        .input-wrap input {
            display: block;
            -webkit-box-flex: 1;
            background-color: rgba(255, 255, 255, 0);
            outline: none;
            height: 32px;
        }

        .find-pwd {
            text-align: right;
            margin: 40px;
        }

        .btn {
            display: block;
            color: #000000;
            margin: 0 40px;
            text-align: center;
            border-radius: 8px;
            height: 40px;
            line-height: 40px;
            border: 1px solid #CECECE;
        }

        input {
            padding-left: 10px;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <header class="aui-bar aui-bar-nav">
        <a class="aui-pull-left aui-btn" tapmode="background: #D8D9DA ;"onclick="api.closeWin()">
            <span class="aui-iconfont aui-icon-left"></span>
        </a>
        <div class="aui-title">注册</div>
    </header>
    <div class="content">
        <div class="form">
            <div class="input-wrap">
                <i class="user"></i>
                <input type="text" placeholder="用户名" id="username" value="">
            </div>
            <div class="input-wrap">
                <i class="email"></i>
                <input type="text" placeholder="邮箱" id="email" value="">
            </div>
            <div class="input-wrap">
                <i class="password"></i>
                <input type="password" placeholder="密码" id="password" value="">
            </div>
        </div>
        <div class="btn" id="login" tapmode="" onclick="register()">注册</div>
    </div>
<script src="../script/api.js"></script>
<script src="../script/zepto.min.js"></script>
<script src="../script/APICloud-rest-SHA1.js"></script>
<script src="../script/remotedb.js"></script>
<script>
    apiready = function () {
        $api.fixStatusBar( $api.dom('header') );
    };

    function register() {
        //这个地方登录需要userid psword email
        api.showProgress();
        var client = new Resource('A6061114726582','F70FEF7F-7BB8-5B9C-EEB3-41D3963C3F0C');//JS-SDK的初始化
        var Model = client.Factory("file");
        var model = api.require('model');
        var username = $("#username").val();
        var password = $("#password").val();
        var email = $("#email").val();
        var user = api.require('user');
        user.register({
            username : username,
            password: password,
            email: email
          }, function (ret,err){
            api.hideProgress();
            if (ret){
                Model.query({//给注册用户上传默认头像
                    filter : {
                        where : {
                            "name" : "user_weiboimage_board@2x.png"
                        }
                    }
                },function(ret,err){
                    if(ret){
                        ret = ret[0];
                        var avatarID = ret.id;
                        var avatarUrl = ret.url;
                        var avatarName = ret.name;
                        fnGet('user',{"username":username},0,5//先获取注册用户的id
                            ,function(ret,err){
                                if(ret){
                                    var body = ret.body[0];
                                    fnPost('user',body.id,{
                                            'values':{
                                                'gender' : '未选择性别',
                                                'birthday' : '未选择生日',
                                                'city' : '未选择城市',
                                                'avatar':{//再根据头像的各个信息更新user表中的avatar段
                                                    'id' : avatarID,
                                                    'url' : avatarUrl,
                                                    'name' : avatarName
                                                }
                                            }
                                        },true,
                                        function(ret,err){
                                            if(err){
                                                alert("设置头像数据失败！" + JSON.stringify(err));
                                            }
                                            else{
                                                alert('注册成功!');
                                                api.closeWin();
                                            }
                                        });
                                }
                                else{
                                    alert("获取用户id失败！" + JSON.stringify(err));
                                }
                            });
                    }
                    else{
                        alert("上传默认头像失败！" + JSON.stringify(err));
                    }
                });
            }
            else {
                alert('注册失败！');
            }
        });
    }
</script>
</body>
</html>

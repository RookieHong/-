<!doctype html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <meta name="format-detection" content="telephone=no,email=no,date=no,address=no">
    <title>底部导航</title>
    <link rel="stylesheet" type="text/css" href="./css/api.css"/>
    <link rel="stylesheet" type="text/css" href="./css/common.css" />
    <link rel="stylesheet" type="text/css" href="./css/aui.css" />
    <style>

    </style>
</head>
<body>
    <header class="aui-bar aui-bar-nav" id="header">
        <div class='frame-header'>
            <a class="aui-pull-left aui-btn" tapmode="background: #D8D9DA ;"onclick="fnSearch()">
                <span class="aui-iconfont aui-icon-search"></span>
            </a>
            <div class="aui-title">中心广场</div>
            <a class="aui-pull-right aui-btn" onclick="openNewWin( 'win_edit' )">
                <span class="aui-iconfont aui-icon-edit"></span>
            </a>
        </div>
        <div class="frame-header aui-hide">信箱</div>
        <div class="frame-header aui-hide">
        </div>
        <div class="frame-header aui-hide">
            <a class="aui-pull-left aui-btn aui-invisible" tapmode="background: #D8D9DA ;" onclick="">
                <span class="aui-iconfont aui-icon-search"></span>
            </a>
            <div class="aui-title">情绪小家</div>
        </div>
    </header>

    <footer class="aui-bar aui-bar-tab" id="footer">
        <div class="aui-bar-tab-item aui-active" onclick="randomSwitchBtn( this );">
            <i class="aui-iconfont aui-icon-home"></i>
            <div class="aui-bar-tab-label">中心广场</div>
        </div>
        <div class="aui-bar-tab-item" onclick="randomSwitchBtn( this );">
            <i class="aui-iconfont aui-icon-mail"></i>
            <div class="aui-bar-tab-label">信箱</div>
        </div>
        <div class="aui-bar-tab-item" onclick="randomSwitchBtn( this );">
            <i class="aui-iconfont aui-icon-info"></i>
            <div class="aui-bar-tab-label">我的医生</div>
        </div>
        <div class="aui-bar-tab-item" onclick="randomSwitchBtn( this );">
            <i class="aui-iconfont aui-icon-my"></i>
            <div class="aui-bar-tab-label">情绪小家</div>
        </div>
    </footer>
</div>
</body>
</html>
<script type="text/javascript" src="script/api.js"></script>
<script type="text/javascript">
    apiready = function () {
        $api.fixStatusBar( $api.dom('header') );
        $api.fixStatusBar(header);
        api.setStatusBarStyle({
            style: 'dark',
            color: '#6ab494'
        });
        funIniGroup();
        Init_mcm();
    }

    function funIniGroup(){
        var eHeaderLis = $api.domAll('#footer .aui-bar-tab-item'),
            frames = [];
        for (var i = 0,len = eHeaderLis.length; i < len; i++) {
                frames.push( {
                    name: 'frame'+i,
                    url: './html/frame'+i+'.html',
                    bgColor : 'rgba(0,0,0,.2)',
                    bounces : false
                } )
        }
        api.openFrameGroup({
            name: 'group',
            scrollEnabled: false,
            rect: {
                x: 0,
                y: $api.dom('#header').offsetHeight,
                w: api.winWidth,
                h: api.winHeight - $api.dom('#footer').offsetHeight - $api.dom('#header').offsetHeight
            },
            index: 0,
            frames: frames
        }, function (ret, err) {
        });
    }

    //初始化云服务
    function Init_mcm(){
      var model = api.require('model');
      model.config({
          appId: 'A6061114726582',
          appKey: 'F70FEF7F-7BB8-5B9C-EEB3-41D3963C3F0C',
          host: 'https://d.apicloud.com'
      });
    }

    // 随意切换按钮
    function randomSwitchBtn( tag ) {
        //if( tag == $api.dom('#footer li.active') )return;
        var eFootLis = $api.domAll('#footer .aui-bar-tab-item'),
            eHeadLis = $api.domAll('#header .frame-header'),
            index = 0;
        for (var i = 0,len = eFootLis.length; i < len; i++) {
            if( tag == eFootLis[i] ){
                index = i;
            }else{
                $api.removeCls(eFootLis[i], 'aui-active');
                $api.addCls(eHeadLis[i], 'aui-hide');
            }
        }

        $api.addCls( eFootLis[index], 'aui-active');
        $api.removeCls( eHeadLis[index], 'aui-hide');

        api.setFrameGroupIndex({
            name: 'group',
            index: index
        });
    }

    function fnSearch(){
        var curUser = $api.getStorage('current user');
        var UISearchBar = api.require('UISearchBar');
        var query = api.require('query');
        var model = api.require('model');
        var relation = api.require('relation');
        var listData = [];

        UISearchBar.open({
            placeholder: '请输入搜索关键字',
            historyCount: 10,
            showRecordBtn: false,
            texts: {
                cancelText: '取消',
                clearText: '清除搜索记录'
            },
            styles: {
                navBar: {
                    bgColor: '#FFFFFF',
                    borderColor: '#ccc'
                },
                searchBox: {
                    bgImg: '',
                    color: '#000',
                    height: 44
                },
                cancel: {
                    bg: 'rgba(0,0,0,0)',
                    color: '#D2691E',
                    size: 16
                },
                list: {
                    color: '#696969',
                    bgColor: '#FFFFFF',
                    borderColor: '#eee',
                    size: 16
                },
                clear: {
                    color: '#000000',
                    borderColor: '#ccc',
                    size: 16
                }
            }
        }, function(ret, err){
            if( ret ){
                if(ret.eventType == 'search' || ret.eventType == 'history'){
                    api.showProgress({
                        style: 'default',
                        animationType: 'fade',
                        title: '努力搜索中...',
                        text: '先喝杯茶...',
                        modal: false
                    });

                    var text = ret.text;
                    var listData = [];
                    query.createQuery(function(ret,err){
                    	if(ret && ret.qid){
                            var qid = ret.qid;
                            query.whereLike({
                                qid : qid,
                                value : text,
                                column : 'username'
                            });

                            model.findAll({//找用户
                                class: 'user',
                                qid: qid
                            },function(ret,err){
                                if(ret){
                                    for(var i in ret){
                                        listData.push({
                                            imgPath : ret[i].avatar.url,
                                            title : ret[i].username,
                                            subTitle : '',
                                            remark : '用户',
                                            icon : '',
                                            uid : ret[i].id,
                                            rightBtns : [{
                                                bgColor: '#388e8e',
                                                activeBgColor: '',
                                                width: 70,
                                                title: '添加好友',
                                                titleSize: 12,
                                                titleColor: '#fff',
                                                icon: '',
                                                iconWidth: 20
                                            }]
                                        });
                                    }

                                    query.createQuery(function(ret,err){
                                    	if(ret && ret.qid){
                                            var qid = ret.qid;
                                            query.whereLike({
                                                qid : qid,
                                                value : text,
                                                column : 'title'
                                            });

                                            model.findAll({//找帖子
                                                class: 'Forum',
                                                qid: qid
                                            },function(ret,err){
                                                if(ret){
                                                    for(var i in ret){
                                                        listData.push({
                                                            imgPath : '',
                                                            title : ret[i].title,
                                                            subTitle : ret[i].poster,
                                                            remark : '主题帖',
                                                            icon : '',
                                                            uid : ret[i].id,
                                                            time : ret[i].createdAt,
                                                            content : ret[i].content
                                                        });
                                                    }
                                                    api.hideProgress();
                                                    api.openWin({//打开搜索结果界面
                                                        name: 'search_result',
                                                        url: './html/search_result.html',
                                                        pageParam: {
                                                            listData : listData,
                                                            searchText : text
                                                        }
                                                    });
                                                }
                                            });
                                        }
                                    });
                                }
                            });

                        }
                    });
                }
            }else{
                 alert( JSON.stringify( err ) );
            }
        });

    }

    function openNewWin( name ){
        api.openWin({
            name: name,
            url: './html/' + name + '.html',
        });
    }
</script>
